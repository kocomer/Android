<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/fragment_modules_head_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/modules_head_title_width"
        android:layout_alignParentTop="true"
        android:background="@drawable/shape_modules_title">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="标题" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/fragment_modules_body_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fragment_modules_foot_rl"
        android:layout_below="@+id/fragment_modules_head_rl"
        android:background="@color/colorAccent"
        android:orientation="vertical"></LinearLayout>

    <RelativeLayout
        android:id="@+id/fragment_modules_foot_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/fragment_modules_foot_wechat_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fragment_modules_foot_corporation_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
