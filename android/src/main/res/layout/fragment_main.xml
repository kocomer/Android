<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kocomer.android.fragment.ActivityFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录名" />

        <EditText
            android:id="@+id/fragment_main_loginet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入登录名"
            android:text="test" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码" />

        <EditText
            android:id="@+id/fragment_main_passwordet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入密码"
            android:text="test" />
    </LinearLayout>

    <Button
        android:id="@+id/fragment_main_loginbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录" />

    <Button
        android:id="@+id/fragment_main_btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="btn1" />
</LinearLayout>
