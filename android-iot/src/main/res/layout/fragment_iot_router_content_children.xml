<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="设备Mac：" />

            <TextView
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:text="登录时间：" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="更新时间：" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_iot_router_content_children_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2012-12-12 11：11：11" />

            <TextView
                android:id="@+id/fragment_iot_router_content_children_date_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="登录时间" />

            <TextView
                android:id="@+id/fragment_iot_router_content_children_update_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="更新时间" />

        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/fragment_iot_router_content_children_black_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="加入黑名单" />

        <Button
            android:id="@+id/fragment_iot_router_content_children_remark_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="加备注" />

        <Button
            android:id="@+id/fragment_iot_router_content_children_force_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="强制下线" />
    </RelativeLayout>
</LinearLayout>