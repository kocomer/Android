<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="mac号:" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="加入时间:" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_iot_black_content_item_mac_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2012-12-1-2" />

            <TextView
                android:id="@+id/fragment_iot_black_content_item_date_tv"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00：11：22" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_iot_black_content_item_remove_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_margin="@dimen/fragment_login_margin"
            android:background="@drawable/btn_selector"
            android:clickable="true"
            android:duplicateParentState="false"
            android:gravity="center"
            android:padding="18dp"
            android:text="移除黑名单"
            android:textColor="@color/white" />
    </LinearLayout>


</LinearLayout>