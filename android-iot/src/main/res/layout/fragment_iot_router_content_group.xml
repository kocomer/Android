<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:height="80dp" />

    <ImageView
        android:id="@+id/fragment_iot_router_content_group_status_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        android:src="@drawable/device_online" />

    <TextView
        android:id="@+id/fragment_iot_router_content_group_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/fragment_iot_router_content_group_status_iv"

        android:text="测试" />

    <TextView
        android:id="@+id/fragment_iot_router_content_group_split_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/fragment_iot_router_content_group_name_tv"
        android:text=":" />

    <TextView
        android:id="@+id/fragment_iot_router_content_group_serial_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/fragment_iot_router_content_group_split_tv"
        android:text="串号" />


</RelativeLayout>